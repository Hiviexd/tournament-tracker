        "axios": "^1.6.8",
        "connect-mongo": "3.2.0",
        "cookie-parser": "^1.4.6",
        "cross-env": "^7.0.3",
        "express": "^4.19.2",
        "express-session": "^1.18.0",
        "moment": "^2.30.1",
